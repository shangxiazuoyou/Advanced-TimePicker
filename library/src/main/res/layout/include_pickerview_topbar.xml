<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picker_bg_topbar">

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|start"
        android:paddingEnd="@dimen/picker_topbar_paddingright"
        android:paddingLeft="@dimen/picker_topbar_paddingleft"
        android:paddingRight="@dimen/picker_topbar_paddingright"
        android:paddingStart="@dimen/picker_topbar_paddingleft"
        android:text="@string/picker_cancel"
        android:textColor="@drawable/selector_pickerview_btn"
        android:textSize="@dimen/picker_topbar_btn_textsize" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btnCancel"
        android:layout_toLeftOf="@+id/btnSubmit"
        android:layout_toRightOf="@+id/btnCancel"
        android:layout_toStartOf="@+id/btnSubmit"
        android:gravity="center"
        android:textColor="@color/picker_topbar_title"
        android:textSize="@dimen/picker_topbar_title_textsize" />

    <Button
        android:id="@id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|start"
        android:paddingEnd="@dimen/picker_topbar_paddingleft"
        android:paddingLeft="@dimen/picker_topbar_paddingright"
        android:paddingRight="@dimen/picker_topbar_paddingleft"
        android:paddingStart="@dimen/picker_topbar_paddingright"
        android:text="@string/picker_submit"
        android:textColor="@drawable/selector_pickerview_btn"
        android:textSize="@dimen/picker_topbar_btn_textsize" />
</RelativeLayout>
